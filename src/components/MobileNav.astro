---
import NavList from "./NavList.astro"
---
<div class="flex lg:hidden">
    <button type="button" class="toggleNavButton -m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
      <span class="sr-only">Open main menu</span>
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>
  </div>
<div class="lg:hidden" id="mobileNav" role="dialog" aria-modal="true">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-50 bg-slate-700 opacity-40 toggleNavButton"></div>
    <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between">
        <a href="/" class="-m-1.5 p-1.5">
          Marketing Site
        </a>
        <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700 toggleNavButton">
          <span class="sr-only">Close menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            <NavList /> 
          </div>
        </div>
      </div>
    </div>
  </div>


  <script>
    const mobileNav = document.getElementById('mobileNav')
    const navButtons = document.querySelectorAll('.toggleNavButton')
    // Hides nav
    mobileNav.classList.toggle('hidden')
    navButtons.forEach((button) => {
        button.addEventListener('click', (e => {
            mobileNav.classList.toggle('hidden')
        }))
    })
  </script>